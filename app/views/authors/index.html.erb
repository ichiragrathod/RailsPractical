<h1> Authors Listing Page!!!</h1>

<br>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Date Of Birth</th>
            <th>Email</th>
            <th colspan="3">Action</th>
        </tr>
    </thead>

    <tbody>
    <% @authors.each do |author| %>
        <tr>
            <td><%= author.id%> </td>
            <td><%= author.first_name%> <%= author.last_name%></td>
            <td><%= author.date_of_birth%></td>
            <td><%= author.email%></td> 
            <td><%= link_to 'Show', author_path(author.id)%></td>
            <td><%= link_to 'Edit', edit_author_path(author.id)%></td>
            <td><%= button_to 'Delete', author_path(author.id),method: :delete, data: { confirm: "Are you sure to delete this data?" }  %> </td>
        </tr>
    <%  end %>   
    </tbody>
</table>
<p>
<%= link_to 'Add New Author', new_author_path %>
</p>