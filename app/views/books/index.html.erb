<h1> Books Listing Page!!!</h1>

<br>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Author ID</th>
            <th>Author Name</th>
            <th>Author Email ID</th>
            <th colspan="4">Action</th>
        </tr>
    </thead>

    <tbody>
    <% @books.each do |book| %>
        <tr>
            <td><%= book.name%></td>
            <td><%= book.price%></td>
            <td><%= book.author_id%> </td> 
            <td><%= book.author.first_name%> <%= book.author.last_name%></td>
            <td><%= book.author.email%></td>
            <td><%= link_to 'Show', book_path(book.id)%></td>
            <td><%= link_to 'Edit', edit_book_path(book.id)%></td>
            <td><%= button_to 'Delete', book_path(book.id),method: :delete, data: { confirm: "Are you sure to delete this data?" }  %> </td>
        </tr>
    <%  end %>   
    </tbody>
</table>
<p>
<%= link_to 'Add New Book', new_book_path %>
</p>
