<h1> Customers Listing Page!!!</h1>

<p>
  <%= link_to 'Add New Customer', new_business_customers_path %>
</p>
<br>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone Number </th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %> </td>
      <td><%= customer.name %> </td>
      <td><%= customer.email %></td>
      <td><%= customer.phone_number %></td>
        
      <td><%= link_to 'Preview', preview_business_customer_path(customer)%></td>
      <td><%= link_to 'Edit', edit_business_customer_path(customer)%></td>
      <td><%= button_to 'Delete', delete_customer_business_customer_path(customer),method: :delete, data: { confirm: "Are you sure to delete this data?" }  %> </td>
    </tr>
  <%  end %>   
  </tbody>
</table>

<p>
  <%= link_to 'Search Customers', search_business_customers_path %>
</p>
<br>
