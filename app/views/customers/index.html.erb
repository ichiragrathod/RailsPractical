<h1> Customers Listing Page!!!</h1>
<br>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number </th>
            <th colspan="3">Action</th>
        </tr>
    </thead>
    <tbody>
    <% @customers.each do |customer| %>
        <tr>
            <td><%= customer.id %> </td>
            <td><%= customer.fname %> <%= customer.lname %></td>
            <td><%= customer.email %></td>
            <td><%= customer.phone_number %></td>
             
            <td><%= link_to 'Show', customer_path(customer.id)%></td>
            <td><%= link_to 'Edit', edit_customer_path(customer.id)%></td>
            <td><%= button_to 'Delete', customer_path(customer.id),method: :delete, data: { confirm: "Are you sure to delete this data?" }  %> </td>
        </tr>
    <%  end %>   
    </tbody>
</table>
<p>
    <%= link_to 'Add New Customer', new_customer_path %>
</p>
