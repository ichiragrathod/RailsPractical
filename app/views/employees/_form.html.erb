<% if @employee.errors.any? %>
  <h2>The following errors prevented the employee from being saved </h2>
  <ul>
    <% @employee.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>
<%= form_with(model:@employee, local: true, data: { turbo: false }) do |f| %>
  <p>
    <%= f.label :employee_name%>
    <br>
    <%= f.text_field :employee_name%>
  </p>

  <p>
    <%= f.label :email%>
    <br>
    <%= f.email_field :email%>
  </p>

  <p>
    <%= f.label :password%>
    <br>
    <%= f.password_field :password%>
  </p>

  <p>
    <%= f.label :birth_date%>
    <br>
    <%= f.date_field :birth_date%>
  </p>

  <p>
    <%= f.radio_button :gender, "Male" %>
    <%= f.label :gender_male, "Male" %>
    <%= f.radio_button :gender, "Female" %>
    <%= f.label :gender_female, "Female" %>

  </p>

  <% Employee::HOBBIES.each do |key| %>
    <%= f.check_box :hobbies, {multiple: true, checked:f.object.hobbies&.include?(key.to_s)}, key, nil %>
    <%= f.label key %>
  <% end %>

  <p>
    <%= f.label :address%>
    <br>
    <%= f.text_area :address%>
    <br>
    <%= f.fields_for :addresses do |addresses_form| %>
      <%= addresses_form.label :house_name, "House Name" %>
      <%= addresses_form.text_field :house_name %>
      <br>
      <%= addresses_form.label :street_name, "Street Name"  %>
      <%= addresses_form.text_field :street_name %>
      <br>
      <%= addresses_form.label :road, "Road Name"  %>
      <%= addresses_form.text_field :road %>
      <br>
    <% end %>
  </p>

  <p>
    <%= f.label :mobile_number%>
    <br>
    <%= f.number_field :mobile_number%>
  </p>

  <p>
    <%= f.label :document%>
    <br>
    <%= f.file_field :document%>
  </p>

  <p>
    <%= f.submit%>
  </p>
  
<% end %>
