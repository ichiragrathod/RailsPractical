<br>
<% flash.each do |type, msg| %>
  <div style="color:red;">
    <%= msg %>
  </div>
<% end %>

<%= form_with url: "/search", method: :get do |form| %>
  <%= form.label :query, "Search employee name:" %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>
<br>

<% if @employees %>
  <%= render 'employee' %>
<% end %>
