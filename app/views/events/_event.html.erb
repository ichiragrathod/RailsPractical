<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>Event Date </th>
      <th colspan="4">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @events.each do |event| %>
    <tr>
      <td> <%= event.id %> </td>
      <td> <%= event.name %> </td>
      <td> <%= event.description %></td>
      <td> <%= event.category.category_name %></td>
      <td> <%= event.event_date %></td>
        
      <td> <%= link_to 'Show', event_path(event.id)%></td>
      <% if logged_in? && event.users[0] == current_user %>
        <td> <%= link_to 'Edit', edit_event_path(event.id)%></td>
        <td> <%= button_to 'Delete', event_path(event.id),method: :delete, data: { confirm: "Are you sure to delete this data?" } %> </td>
      <% end %>
    </tr>
  <% end %>   
  </tbody>
</table>