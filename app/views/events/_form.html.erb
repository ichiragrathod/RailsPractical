<% if @event.errors.any? %>
  <h2>The following errors prevented the event details from being saved </h2>
  <ul>
    <% @event.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model:@event, data: { turbo: false }, local: true) do |f| %>

  <p>
    <%= f.label :name%>
    <br>
    <%= f.text_field :name%>
  </p>

  <p>
    <%= f.label :description%>
    <br>
    <%= f.text_field :description%>
  </p>

  <p>
    <%= f.label :event_date %>
    <br>
    <%= f.date_field :event_date%>
  </p>

  <p>
    <%= f.submit%>
  </p>

<% end %>
