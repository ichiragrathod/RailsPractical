<h1> Events Listing Page!!!</h1>
<br>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Event Date </th>
      <th colspan="4">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @events.each do |event| %>
    <tr>
      <td> <%= event.id %> </td>
      <td> <%= event.name %> </td>
      <td> <%= event.description %></td>
      <td> <%= event.event_date %></td>
        
      <td> <%= link_to 'Show', event_path(event.id)%></td>
      <td> <%= link_to 'Edit', edit_event_path(event.id)%></td>
      <td> <%= button_to 'Delete', event_path(event.id),method: :delete, data: { confirm: "Are you sure to delete this data?" }  %> </td>
    </tr>
  <%  end %>   
  </tbody>
</table>
<p>
  <%= link_to 'Add New Event', new_event_path %>
</p>
