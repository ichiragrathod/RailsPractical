<% if @order.errors.any? %>
  <h2>The following errors prevented the order details from being saved </h2>
  <ul>
    <% @order.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>
<%= form_with(model: [@product, @order], data: { turbo: false }, local: true) do |f| %>
  <p>
    <%= f.label :quantity%>
    <br>
    <%= f.text_field :quantity%>
  </p>

  <p>
    <%= f.submit%>
  </p>
    
<% end %>
