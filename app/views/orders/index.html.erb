<h1> Orders Listing Page!!!</h1>

<%= form_tag orders_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search], placeholder:'Search by order status' %>
    <%= submit_tag "Search" %>
  </p>
<% end %>
<br>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number </th>
            <th>Status </th>
            <th colspan="3">Action</th>
        </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
        <tr>
            <td><%= order.id %> </td>
            <td><%= order.customer.fname %> <%= order.customer.lname %></td>
            <td><%= order.customer.email %></td>
            <td><%= order.customer.phone_number %></td>
            <td><%= order.status %></td>
            <td><%= link_to 'Show', order_path(order.id)%></td>
            <td><%= link_to 'Edit', edit_order_path(order.id)%></td>
            <td><%= button_to 'Delete', order_path(order.id),method: :delete, data: { confirm: "Are you sure to delete this data?" }  %> </td>
        </tr>
    <%  end %>   
    </tbody>
</table>
<p>
    <%= link_to 'Add New Order', new_order_path %>
</p>
