<h1> Orders Listing Page!!!</h1>
<p>
    <%= link_to 'Add New Order', new_product_order_path %>
</p>
<br>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Product Name</th>
      <th>Product Description</th>
      <th>Total Price</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %> </td>
      <td><%= order.product.name %> </td>
      <td><%= order.product.description %></td>
      <td><%= order.total_price %></td>
      <td><%= link_to 'Show', product_order_path(@product, order)%></td>
      <td><%= link_to 'Edit', edit_product_order_path(@product, order)%></td>
      <td><%= button_to 'Delete', product_order_path(@product, order), method: :delete, data: { confirm: "Are you sure to delete this data?" }  %> </td>
    </tr>
  <% end %>   
  </tbody>
</table>
