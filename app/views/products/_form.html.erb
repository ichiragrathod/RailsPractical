<% if @product.errors.any? %>
    <h2>The following errors prevented the product from being saved </h2>
    <ul>
        <% @product.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
        <% end %>
    </ul>
<% end %>

<%= form_with(model:@product, local: true, data: { turbo: false }) do |f| %>
    <p>
        <%= f.label :title%>
        <br>
        <%= f.text_field :title%>
    </p>

    <p>
        <%= f.label :description%>
        <br>
        <%= f.text_area :description%>
    </p>

    <p>
        <%= f.label :price%>
        <br>
        <%= f.number_field :price, step: :any%>
    </p>

    <p>
        <%= f.label :capacity%>
        <br>
        <%= f.number_field :capacity, step: :any%>
    </p>

    <p>
        <%= f.label :is_active%>
        <br>
        <%= f.select :is_active, options_for_select([true, false])%>
    </p>

    <p>
        <%= f.label :status%>
        <br>
        <%= f.select :status, options_for_select(['In_stock', 'out_of_stock', 'Coming_soon'])%>
    </p>

    <p>
        <%= f.submit%>
    </p>
<% end %>
