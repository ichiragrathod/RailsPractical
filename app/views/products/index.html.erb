<h1> Products Listing Page!!!</h1>
<br>
<% if current_user && current_user.admin? %>
  <p>
    <%= button_to 'Add New Product', new_product_path, method: 'get'%>
  </p>
  <br>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="4">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id%> </td>
        <td><%= product.product_name%></td>
        <td><%= product.description%></td> 
        <td><%= product.price%></td> 
        <% if current_user && current_user.admin? %>
          <td><%= link_to 'Show',product_path(product.id)%></td>
          <td><%= link_to 'Edit', edit_product_path(product.id)%></td>
          <td><%= button_to 'Delete', product_path(product.id),method: :delete, data: { confirm: "Are you sure to delete this data?" }  %> </td>
        <% end %>
      </tr>
    <% end %>   
  </tbody>
</table>
