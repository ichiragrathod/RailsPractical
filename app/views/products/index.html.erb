<h1> Products Listing Page!!!</h1>
<br>

<p>
    <%= button_to 'Add New Product', new_product_path, method: 'get'%>
</p>
<br>

<p>
    <%= button_to 'Display All Products', display_all_products_path, method: 'get'%>
</p>
<br>

<p>
    <%= button_to 'Display Active Products', display_active_products_path, method: 'get'%>
</p>
<br>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Capacity</th>
            <th>Is_active</th>
            <th>Status</th>
            <th colspan="7">Action</th>
        </tr>
    </thead>

    <tbody>
        <% @products.each do |product| %>
            <tr>
                <td><%= product.id%> </td>
                <td><%= product.title%></td>
                <td><%= product.description%></td> 
                <td><%= product.price%></td> 
                <td><%= product.capacity%></td> 
                <td><%= product.is_active%></td> 
                <td><%= product.status%></td> 
                <td><%= link_to 'Show',product_path(product.id)%></td>
                <td><%= link_to 'Edit', edit_product_path(product.id)%></td>
                <td><%= button_to 'Delete', product_path(product.id),method: :delete, data: { confirm: "Are you sure to delete this data?" }  %> </td>
            </tr>
        <%  end %>   
    </tbody>
</table>
