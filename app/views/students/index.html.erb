<h1> Students Listing Page!!!</h1>

<br>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Date Of Birth</th>
            <th>Department</th>
            <th colspan="4">Action</th>
        </tr>
    </thead>

    <tbody>
    <% @students.each do |student| %>
        <tr>
            <td><%= student.id%> </td>
            <td><%= student.first_name%> <%= student.last_name%></td>
            <td><%= student.date_of_birth%></td>
            <td><%= student.department%></td> 
            <td><%= link_to 'Show', student_path(student.id)%></td>
            <td><%= link_to 'Edit', edit_student_path(student.id)%></td>
            <td><%= button_to 'Delete', student_path(student.id),method: :delete, data: { confirm: "Are you sure to delete this data?" }  %> </td>
        </tr>
    <%  end %>   
    </tbody>
</table>
<p>
<%= link_to 'Add New Student', new_student_path %>
</p>