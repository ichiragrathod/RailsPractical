<% if @user.errors.any? %>
  <h2>The following errors prevented the user from being saved </h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>
<%= form_with(model:@user, local: true, data: { turbo: false }) do |f| %>
  <p>
    <%= f.label :name%>
    <br>
    <%= f.text_field :name%>
  </p>

  <p>
    <%= f.label :email%>
    <br>
    <%= f.email_field :email%>
  </p>

  <p>
    <%= f.label :picture%>
    <br>
    <%= f.file_field :picture%>
  </p>
  
  <p>
    <%= f.submit%>
  </p>
  
<% end %>
