<h1> Users Listing Page!!!</h1>
<br>

<p>
<%= link_to 'Add New User', new_user_path %>
</p>
<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Picture</th>
      <th colspan="4">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %> </td>
        <td><%= user.name %> </td>
        <td><%= user.email %> </td>
        <td><img src="<%= user.picture %>" class="img-responsive img-thumbnail" height="200px" width="200px"> </td>
        <td><%= link_to 'Show',user_path(user.id) %></td>
        <td><%= link_to 'Edit', edit_user_path(user.id) %></td>
        <td><%= button_to 'Delete', user_path(user.id),method: :delete, data: { confirm: "Are you sure to delete this data?" } %> </td>
      </tr>
    <% end %>   
  </tbody>
</table>
