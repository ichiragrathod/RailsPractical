<h1> Users Listing Page!!!</h1>
<br>

<p>
<%= link_to 'Add New User', new_user_path %>
</p>
<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Subcription</th>
      <th>Subscription Email</th>
      <th colspan="4">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %> </td>
        <td><%= user.first_name %> </td>
        <td><%= user.last_name %> </td>
        <td><%= user.email %> </td>
        <td><%= user.subcription %> </td>
        <td><%= user.subscription_email %> </td>
        <td><%= link_to 'Show Profile', profile_user_path(user.id) %></td>
        <td><%= link_to 'Change Password', change_password_user_path(user.id) %></td>
        <td><%= link_to 'Show',user_path(user.id) %></td>
        <td><%= link_to 'Edit', edit_user_path(user.id) %></td>
        <td><%= button_to 'Delete', user_path(user.id),method: :delete, data: { confirm: "Are you sure to delete this data?" } %> </td>
      </tr>
    <% end %>   
  </tbody>
</table>
